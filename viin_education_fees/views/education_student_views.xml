<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="education_student_view_form" model="ir.ui.view">
        <field name="name">education.student.inherit</field>
        <field name="model">education.student</field>
        <field name="inherit_id" ref="viin_education.education_student_view_form" />
        <field name="arch" type="xml">
            <page name="documents" position="after">
                <page name="fee_terms" string="Fees Terms" groups="viin_education_fees.group_education_fee_user">
                    <field name="fee_term_ids">
                        <tree>
                            <field name="fee_term_id"/>
                            <field name="discount"/>
                        </tree>
                        <form>
                            <group>
                                <group>
                                    <field name="fee_term_id"/>
                                </group>
                                <group>
                                    <field name="discount"/>
                                </group>
                            </group>
                            <separator string="Description"/>
                            <field name="description"/>
                        </form>
                    </field>
                </page>
            </page>
        </field>
    </record>

</odoo>
