<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="education_fee_term_view_tree" model="ir.ui.view">
        <field name="name">education.fee.term.tree</field>
        <field name="model">education.fee.term</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="discount" />
                <field name="company_id" groups="base.group_multi_company" />
            </tree>
        </field>
    </record>
    
    <record id="education_fee_term_view_form" model="ir.ui.view">
        <field name="name">education.fee.term.form</field>
        <field name="model">education.fee.term</field>
        <field name="arch" type="xml">
            <form string="Education Fee Term Form">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}" />
                    <field name="active" invisible="1" />
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Fee Term" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="discount" />
                        </group>
                        <group>
                            <field name="company_id" />
                        </group>
                    </group>
                    <separator string="Description"/>
                    <field name="description"/>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="education_fee_term_view_search" model="ir.ui.view">
        <field name="name">education.fee.term.search</field>
        <field name="model">education.fee.term</field>
        <field name="arch" type="xml">
            <search string="Education Fees Search">
                <field name="name" />
                <filter string="Archived" name="ftr_inactive" domain="[('active', '=', False)]" />
                <group expand="0" string="Group By">
                    <filter string="Company" name="grp_company" domain="[]" context="{'group_by' : 'company_id'}" groups="base.group_multi_company" />
                </group>
            </search>
        </field>
    </record>
    
    <record id="education_fee_term_action" model="ir.actions.act_window">
        <field name="name">Fees Terms</field>
        <field name="res_model">education.fee.term</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="education_fee_term_menu" action="education_fee_term_action" parent="education_fee_menu_root" sequence="10" />

</odoo>
