<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="module_admission_category_user" model="ir.module.category">
			<field name="name">Admission</field>
			<field name="parent_id" ref="viin_education.module_education_category" />
			<field name="description">Helps you handle admission application</field>
			<field name="sequence">20</field>
		</record>

		<record id="viin_admission_group_user" model="res.groups">
			<field name="name">User</field>
			<field name="implied_ids" eval="[(4, ref('viin_education.viin_education_group_user'))]" />
			<field name="category_id" ref="module_admission_category_user" />
			<field name="comment">Users belong to this group can use this application</field>
		</record>

		<record id="viin_admission_group_admin" model="res.groups">
			<field name="name">Administrator</field>
			<field name="implied_ids" eval="[(4, ref('viin_admission_group_user'))]" />
			<field name="category_id" ref="module_admission_category_user" />
			<field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]" />
			<field name="comment">Users belong to this group can control this application</field>
		</record>
	</data>
	
	<data noupdate="1">
		<record id="education_admission_rule_multi_company" model="ir.rule">
			<field name="name">Admission multi-company</field>
			<field ref="model_education_admission" name="model_id" />
			<field eval="True" name="global" />
			<field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
		</record>

		<record id="education_application_rule_multi_company" model="ir.rule">
			<field name="name">Application multi-company</field>
			<field ref="model_education_application" name="model_id" />
			<field eval="True" name="global" />
			<field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
		</record>
	</data>
</odoo>
