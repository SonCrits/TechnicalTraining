<odoo>
	<template id="s_cover" inherit_id="website.s_cover">
		<xpath expr="//div[hasclass('container')]" position="replace">
			<div class="container s_allow_columns">
				<div class='row'>
					<div class="col-xl-3 col-lg-3 col-12">
						<div class="heading clearfix">
							<h2>
								<span>Top product categories</span>
							</h2>
							<p class="hidden-xs">
								With the help of these useful kitchen tools,
								housewives will be able to unleash the creation of attractive
								dishes for the whole family without spending too much time in
								the kitchen as before. again
							</p>
						</div>
					</div>
					<div class='col-xl-9 col-lg-9 col-12'>
						<div class='container text-center'>
							<div class='row'>
								<div class='col-lg-4'>
									<img class="img-thumbnail"
										src='/theme_viin_ecommerce_houseware/static/src/img/snippets/s_cover_product_1.jpeg'
										alt='product 1' 
										loading="lazy"/>
									<h4 class='m-3'>
										Cake Machine
									</h4>
								</div>
								<div class='col-lg-4'>
									<img class="img-thumbnail"
										src='/theme_viin_ecommerce_houseware/static/src/img/snippets/s_cover_product_2.jpeg'
										alt='product 1' 
										loading="lazy"/>
									<h4 class='m-3'>
										Kitchen Utensils
									</h4>
								</div>
								<div class='col-lg-4'>
									<img class="img-thumbnail"
										src='/theme_viin_ecommerce_houseware/static/src/img/snippets/s_cover_product_3.jpeg'
										alt='product 1' 
										loading="lazy"/>
									<h4 class='m-3'>
										Kitchen Tools
									</h4>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</xpath>
	</template>
</odoo>
