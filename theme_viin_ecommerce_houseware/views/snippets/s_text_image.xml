<odoo>
	<template id='s_text_image' inherit_id="website.s_text_image" name="Ecommerce HouseWare Text Image">
		<xpath expr="(//h2)" position="replace" mode='inner'>
			Today's discount
		</xpath>
		<xpath expr="(//a)" position='replace'>
			<a role="button" class="btn btn-primary btn-lg my-1 mr-1 px-5 font-weight-bold flex-grow-1" href="/shop"><i class="fa fa-shopping-cart mr-2"/>Buy Now</a>
		</xpath>
		<xpath expr="//section" position="attributes">
			<attribute name="class" add="o_cc o_cc2" separator=" "/>
		</xpath>
	</template>
</odoo>
