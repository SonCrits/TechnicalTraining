<odoo>
	<template id="s_features" inherit_id="website.s_features">
		<!-- Section -->
		<xpath expr="//section" position="attributes">
			<attribute name="class" add="o_cc o_cc2 pt80 pb80"
				remove="pt32 pb32" separator=" " />
		</xpath>
		
		<!-- paragraph -->
		<!-- column 1 -->
		<xpath expr="(//h3)[1]" position='replace' mode='inner'>
			Enduring
		</xpath>
		<xpath expr="(//p)[1]" position='replace' mode='inner'>
			Nationwideâ€™s Enduring Slogan Still Distinguishes the Brand
		</xpath>
		<!-- column 2 -->
		<xpath expr="(//h3)[2]" position='replace' mode='inner'>
			User-Friendly
		</xpath>
		<xpath expr="(//p)[2]" position='replace' mode='inner'>
			Be beautiful inside and out by our all-new eco-friendly range
		</xpath>
		<!-- column 3 -->
		<xpath expr="(//h3)[3]" position='replace' mode='inner'>
			Eco
		</xpath>
		<xpath expr="(//p)[3]" position='replace' mode='inner'>
			Well, eco-friendly literally means something that is environment-friendly and not harmful to the environment at all
		</xpath>
	</template>
</odoo>
