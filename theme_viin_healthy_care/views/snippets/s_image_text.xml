<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="s_image_text" name="Image - Text" inherit_id="website.s_image_text">
	<xpath expr="//div[2]" position="attributes">
		<attribute name="style">background-color: white;</attribute>
	</xpath>
	<xpath expr="//h2" position="replace">
		<h2 class="fw-bold">CONTACT US</h2>
	</xpath>
	<xpath expr="//h2" position="attributes">
		<attribute name="style">color: black; text-align: center; font-weight: 400</attribute>
	</xpath>
	<xpath expr="//img" position="attributes">
		<attribute name="style">width: auto; height: 100%;</attribute>
	</xpath>
	<xpath expr="//p[1]" position="replace">
		<t t-call="website.s_website_form"/>
	</xpath>
	<xpath expr="//p" position="attributes">
		<attribute name="class">o_default_snippet_text</attribute>
		<attribute name="style">text-align: center; font-size: 18px; color: #606060;</attribute>
	</xpath>
	<xpath expr="//p[1]" position="replace"/>
	<xpath expr="//a" position="replace"/>
</template>

</odoo>
