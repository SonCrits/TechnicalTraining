<odoo>

	<record id="crm_lead_view_form" model="ir.ui.view">
		<field name="name">crm.lead.form.inherit</field>
		<field name="model">crm.lead</field>
		<field name="inherit_id" ref="crm.crm_lead_view_form"/>
		<field name="arch" type="xml">
			<xpath expr="//div[@name='button_box']" position="inside">
	            <button name="action_view_application" groups="viin_education_admission.viin_admission_group_user"
	                type="object"
	                class="oe_stat_button"
	                icon="fa-list">
	                <field string="Applications" name="application_count" widget="statinfo"/>
	            </button>
			</xpath>
			<xpath expr="//page[@name='extra']//field[@name='campaign_id']" position="after">
				<field name="admission_id" groups="viin_education_admission.viin_admission_group_user"/>
			</xpath>
			<xpath expr="//page[@name='lead']//field[@name='campaign_id']" position="after">
				<field name="admission_id" groups="viin_education_admission.viin_admission_group_user"/>
			</xpath>
		</field>
	</record>
    
    <record id="quick_create_opportunity_form" model="ir.ui.view">
        <field name="name">crm.lead.form.quick_create.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.quick_create_opportunity_form"/>
        <field name="arch" type="xml">
            <field name="phone" position="after">
                <field name="admission_id" options="{'no_create': True, 'no_open': True}" 
                    groups="viin_education_admission.viin_admission_group_user"/>
            </field>
        </field>
    </record>
    
    <record id="view_crm_case_leads_filter" model="ir.ui.view">
        <field name="name">crm.lead.search.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_leads_filter"/>
        <field name="arch" type="xml">
            <field name="source_id" position="before">
                <field name="admission_id" groups="viin_education_admission.viin_admission_group_user"/>
            </field>
        </field>
    </record>
    
    <record id="view_crm_case_opportunities_filter" model="ir.ui.view">
        <field name="name">crm.opportunity.search.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
        <field name="arch" type="xml">
            <field name="team_id" position="after">
                <field name="admission_id" groups="viin_education_admission.viin_admission_group_user"/>
            </field>
        </field>
    </record>
    
</odoo>
