<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Landingpage Utilities -->
        <template id="s_viindoo_landingpage_utilities" name="Viindoo Utilities">
            <section class="s_landingpage_utilities pt48 pb48">
                <div class="container">
                    <div class="so_uti_function">
                        <div class="row">
                            <div
                                    class="so_uti_function_left theme-element-hidden animate__animated animate__delay-0.25s animate__slow animate__fadeInDown col-sm-6 col-12"
                                    data-animate-style="animate__fadeInDown">
                                <div class="so_function_icon float-left mr-2">
                                    <span class="fa fa-check"/>
                                </div>
                                <div class="so_function_content">
                                    <span class="so_function_title">
                                        <b>Total management</b>
                                    </span>
                                    <p class="so_function_detail m-0">
                                        Integrating and synchronizing data of all parts
                                        <br/>
                                        according to a standardized and throughout process.
                                    </p>
                                </div>
                            </div>
                            <div
                                    class="so_uti_function_right theme-element-hidden animate__animated animate__delay-0.25s animate__slow animate__fadeInDown col-sm-6 col-12"
                                    data-animate-style="animate__fadeInDown">
                                <div class="float-left float-md-right">
                                    <div class="so_function_icon float-left mr-2">
                                        <span class="fa fa-check"/>
                                    </div>
                                    <div class="so_function_content">
                                        <span class="so_function_title">
                                            <b>Online Platform</b>
                                        </span>
                                        <p class="so_function_detail m-0">
                                            Working anytime, anywhere, no need
                                            <br/>
                                            to install on a computer.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="so_uti_image">
                        <img class="so_item_img"
                             src="/viindoo_theme_common/static/src/img/overview-web.png"
                             alt="Vindoo web" loading="lazy"/>
                    </div>
                    <div class="so_uti_function">
                        <div class="row">
                            <div
                                    class="so_uti_function_left theme-element-hidden animate__animated animate__delay-0.25s animate__slow animate__fadeInDown col-sm-6 col-12"
                                    data-animate-style="animate__fadeInDown">
                                <div class="so_function_icon float-left mr-2">
                                    <span class="fa fa-check"/>
                                </div>
                                <div class="so_function_content">
                                    <span class="so_function_title">
                                        <b>Flexible scalability</b>
                                    </span>
                                    <p class="so_function_detail m-0">
                                        Easy to expand, additional settings to adapt
                                        <br/>
                                        to every change of the Enterprise.
                                    </p>
                                </div>
                            </div>
                            <div
                                    class="so_uti_function_right theme-element-hidden animate__animated animate__delay-0.25s animate__slow animate__fadeInDown col-sm-6 col-12"
                                    data-animate-style="animate__fadeInDown">
                                <div class="float-left float-md-right">
                                    <div class="so_function_icon float-left mr-2">
                                        <span class="fa fa-check"/>
                                    </div>
                                    <div class="so_function_content">
                                        <span class="so_function_title">
                                            <b>Reasonable costs for all sizes</b>
                                        </span>
                                        <p class="so_function_detail m-0">
                                            The solution is suitable for the budget
                                            <br/>
                                            of all businesses.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </template>
        
        <record id="viindoo_theme_common.s_viindoo_landingpage_utilities_000_scss" model="ir.asset">
            <field name="name">Viindoo landingpage utilities 000 SCSS</field>
            <field name="bundle">web.assets_frontend</field>
            <field name="path">viindoo_theme_common/static/src/snippets/s_viindoo_landingpage_utilities/000.scss</field>
            <field name="active" eval="True"/>
        </record>
</odoo>
