<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="0">
		<!-- Snippets menu -->
		<template id="snippets" inherit_id="website.snippets" name="Viindoo Snippets">
			<xpath expr="//div[@id='snippet_structure']" position="before">
				<div id="snippet_viindoo" class="o_panel">
					<div class="o_panel_header"><i class="fa fa-cubes"/>Viindoo Snippets</div>
					<div class="o_panel_body">
						<t t-snippet="viindoo_theme_common.s_viindoo_services"
						   t-thumbnail="/viindoo_theme_common/static/src/img/s-banner-slide.png">
							<keywords>services</keywords>
						</t>

						<t t-snippet="viindoo_theme_common.s_solutions_video"
						   t-thumbnail="/viindoo_theme_common/static/src/img/s-banner-slide.png">
							<keywords>video</keywords>
						</t>

						<t t-snippet="viindoo_theme_common.s_viindoo_landingpage_solution"
						   t-thumbnail="/viindoo_theme_common/static/src/img/s-banner-slide.png">
							<keywords>landing</keywords>
						</t>

						<t t-snippet="viindoo_theme_common.s_viindoo_landingpage_utilities"
						   t-thumbnail="/viindoo_theme_common/static/src/img/s-banner-slide.png">
							<keywords>landing</keywords>
						</t>

						<t t-snippet="viindoo_theme_common.s_youtube_video"
						   t-thumbnail="/viindoo_theme_common/static/src/img/s-banner-slide.png">
							<keywords>video, youtube</keywords>
						</t>

						<t t-snippet="viindoo_theme_common.s_card_column_img_text_header"
						   t-thumbnail="/viindoo_theme_common/static/src/img/pseudo.png"/>
					</div>
				</div>
			</xpath>
		</template>
	</data>
</odoo>
