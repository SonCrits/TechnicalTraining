    <template id="s_erponline_mega_menu_options" inherit_id="website.snippet_options">
        <xpath expr="//*[@data-js='MegaMenuLayout']//t" position="before">
            <t t-set="_label">Erponline Mega Menu</t>
            <we-button t-att-data-select-label="_label"
                       data-select-template="viindoo_theme_common.s_erponline_mega_menu"
                       data-img="/website/static/src/img/snippets_thumbs/s_mega_menu_multi_menus.svg"
                       t-out="_label"/>
        </xpath>
    </template>

    <record id="viindoo_theme_common.s_erponline_mega_menu_000_scss" model="ir.asset">
        <field name="name">Erponline mega menu 000 SCSS</field>
        <field name="bundle">web.assets_frontend</field>
        <field name="path">viindoo_theme_common/static/src/snippets/s_erponline_mega_menu/000.scss</field>
        <field name="active" eval="True"/>
    </record>
