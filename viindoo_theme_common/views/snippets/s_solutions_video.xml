<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Video Tour -->
        <template id="s_solutions_video" name="Viindoo Tour Video">
            <section class="viindoo-section solution-blocks">
                <div class="container">
                    <div class="row mt-5">
                        <t t-foreach="range(3)" t-as="col">
                            <div class="col-lg-4">
                                <div class="s_youtube_video solution-video card mb-5" data-video-id="">
                                    <div class="solution-link overflow-hidden">
                                        <a class="o_bg_cover btn_youtube_play" href="#" title="Play">
                                            <img class="img img-fluid" src="/viindoo_theme_common/static/src/img/accounting.png" alt="Video Image" />
                                        </a>
                                    </div>
                                    <div class="card-body d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            <h6 class="font-weight-bold my-0">Accounting</h6>
                                        </div>
                                        <a class="text-uppercase h6 my-0" href="#"
                                           title="Accounting">More</a>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </section>
        </template>

        <record id="viindoo_theme_common.s_solutions_video_000_scss" model="ir.asset">
            <field name="name">Solutions video 000 SCSS</field>
            <field name="bundle">web.assets_frontend</field>
            <field name="path">viindoo_theme_common/static/src/snippets/s_solutions_video/000.scss</field>
            <field name="active" eval="True"/>
        </record>
</odoo>
