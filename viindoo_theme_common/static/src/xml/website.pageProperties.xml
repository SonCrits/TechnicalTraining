<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<!-- Add Checkbox Transparent Header -->
	<t t-extend="website.pagesMenu.page_info">
		<t t-jquery="#advances_page_info" t-operation="append">
			<div class="form-group row">
				<label class="control-label col-md-5" for="is_header_absolute">Transparent Header</label>
				<div class="col-sm-2">
					<label class="o_switch" for="is_header_absolute" >
						<input type="checkbox" t-att-checked="widget.page.is_header_absolute ? true : undefined" id="is_header_absolute"/>
						<span/>
					</label>
				</div>
			</div>
		</t>
	</t>
</templates>
