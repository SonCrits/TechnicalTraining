<odoo>
	<template id="s_images_wall"
		inherit_id="website.s_images_wall">
		<xpath expr="//div[hasclass('container')]" position="replace">
			<div class='container'>
				<div class="row homebanner h5">
					<!--==== Home Left Box ====== -->
					<div class="col-sm-12 col-md-4 col-lg-4">
						<div class="d-flex flex-column justify-content-between h-100">
							<div class="card">
								<img src="/web/image/website.library_image_03"
									alt="Sunglasses" class="card-img" loading="lazy"/>
								<div class="card-img-overlay text-light">
									<h4>Sunglasses</h4>
									<p>New your eyes stylishly!</p>
									<a href="/shop" class="btn btn-primary">Shop Now</a>
								</div>
							</div>
							<div class="card">
								<img src="/web/image/website.library_image_10"
									alt="Handbags" class="card-img" loading="lazy"/>
								<div class="card-img-overlay text-light">
									<h4>Handbags</h4>
									<p>top branded hardware</p>
									<a href="/shop" class="btn btn-primary o_default_snippet_text">Shop Now</a>
								</div>
							</div>
						</div>
					</div>
					<!--==== Home Middle Box ====== -->
					<div class="col-sm-12 col-md-4 col-lg-4">
						<div class="card h-100">
							<img src="/web/image/website.library_image_05" alt="s3"
								class="card-img h-100" loading="lazy"/>
							<div class="card-img-overlay text-light">
								<h4>Hats Caps</h4>
								<p>Wide veriety of sizes,colors</p>
								<a href="/shop" class="btn btn-primary o_default_snippet_text">Shop Now</a>
							</div>
						</div>
					</div>
					<!--==== Home Right Box ====== -->
					<div class="col-sm-12 col-md-4 col-lg-4">
						<div class='d-flex flex-column justify-content-between h-100'>
							<div class="card">
								<img src="/web/image/website.library_image_14" alt="s3"
									class="card-img" loading="lazy"/>
								<div class="card-img-overlay text-light">
									<h4>Footwear</h4>
									<p>Over 400 luxury designers</p>
									<a href="/shop" class="btn btn-primary o_default_snippet_text">Shop Now</a>
								</div>
							</div>
							<div class="card">
								<img src="/web/image/website.library_image_16" alt="s3"
									class="card-img" loading="lazy"/>
								<div class="card-img-overlay text-light">
									<h4>Buy Scarfs</h4>
									<p>Shop collection of designer</p>
									<a href="/shop" class="btn btn-primary o_default_snippet_text">Shop Now</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</xpath>
		
		<xpath expr="//div[hasclass('container')]" position='attributes'>
			<attribute name="class" add="container-fluid" remove="container" separator=" "/>	
		</xpath>
	</template>
</odoo>
