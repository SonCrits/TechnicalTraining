<odoo>
	<template id="s_color_blocks_2"
		inherit_id="website.s_color_blocks_2">
		<xpath expr="//div[hasclass('container-fluid')]"
			position="replace">
			<div class='container'>
				<div class='row'>
					<div class="col-sm-12 col-md-6 col-lg-6 pt48 pb48 p-3">
						<div class="d-flex flex-column justify-content-between ">
							<div class="card">
								<img src="/web/image/website.s_media_list_default_image_1"
									alt="left image" class="card-img" loading="lazy"/>
								<div class="card-img-overlay text-center">
									<h4 class='text-light'>Limited offer for power tool</h4>
									<h3 class='text-warning'>10% Off on Power Tool</h3>
									<a href="/shop" class="btn font-weight-bold btn-light">Shop Now</a>
								</div>
							</div>
						</div>
					</div>
					<div class="col-sm-12 col-md-6 col-lg-6 pt48 pb48 p-3">
						<div class="d-flex flex-column justify-content-between ">
							<div class="card">
								<img src="/web/image/website.s_media_list_default_image_2"
									alt="right image" class="card-img" loading="lazy"/>
								<div class="card-img-overlay text-center">
									<h4 class='text-light'>Limited offer for power tool</h4>
									<h3 class='text-warning'>Get Extra $10 on Saws</h3>
									<a href="/shop" class="btn font-weight-bold btn-light">Shop Now</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</xpath>
	</template>

</odoo>
