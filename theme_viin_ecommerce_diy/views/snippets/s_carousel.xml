<odoo>
	<template id="s_carousel" inherit_id="website.s_carousel" name="s_carousel">
		<xpath expr="//div[hasclass('s_carousel')]" position="attributes">
			<attribute name="class" add="s_carousel_rounded carousel-fade" remove="s_carousel_default" separator=" "/>
		</xpath>
		<!-- Slide #01 -->
		<xpath expr="//*[hasclass('carousel-content')][1]" position="attributes">
	        <attribute name="class" add="col-lg-8 offset-lg-2 bg-black-50 pt48 pb40" remove="col-lg-6" separator=" "/>
	    </xpath>	    
	    <!-- Slide #03 -->
	    <xpath expr="//div[hasclass('carousel-item')][3]//div[hasclass('carousel-content')]//h2" position="replace">
	    	<h2>Edit this title</h2>
	    </xpath>
	    <xpath expr="//div[hasclass('carousel-item')][3]//div[hasclass('carousel-content')]//h4" position="replace">
	    	<h4>Good writing is simple, but not simplistic.</h4>
	    </xpath>
	    <xpath expr="//div[hasclass('carousel-item')][3]//div[hasclass('carousel-content')]" position="attributes">
	        <attribute name="class" add="offset-lg-2 bg-black-50 text-center pt48 pb40"  separator=" "/>
	    </xpath>
	</template>
</odoo>
