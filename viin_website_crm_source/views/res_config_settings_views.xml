<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.crm</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_crm.res_config_settings_view_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//field[@name='crm_default_user_id']/parent::div" position="after">
	            <div class="row">
	                <label class="col-lg-3 o_light_label" string="Source" for="crm_default_source_id"/>
	                <field name="crm_default_source_id" class="oe_inline"/>
	            </div>
        	</xpath>
        </field>
    </record>
</odoo>
