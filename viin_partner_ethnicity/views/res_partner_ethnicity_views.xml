<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="res_partner_ethnicity_view_tree" model="ir.ui.view">
		<field name="name">res.partner.ethnicity.tree</field>
		<field name="model">res.partner.ethnicity</field>
		<field name="arch" type="xml">
			<tree string="Ethnicity Tree">
				<field name="code" />
				<field name="name" />
				<field name="country_id" />
			</tree>
		</field>
	</record>

	<record id="res_partner_ethnicity_view_form" model="ir.ui.view">
		<field name="name">res.partner.ethnicity.form</field>
		<field name="model">res.partner.ethnicity</field>
		<field name="arch" type="xml">
			<form string="Ethnicity Form">
				<sheet>
					<group>
						<group>
							<field name="name" />
							<field name="country_id" />
						</group>
						<group>
							<field name="code" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="res_partner_ethnicity_view_search" model="ir.ui.view">
		<field name="name">res.partner.ethnicity.search</field>
		<field name="model">res.partner.ethnicity</field>
		<field name="arch" type="xml">
			<search string="Ethnicity Search">
				<field name="name" />
				<field name="code" />
				<group expand="0" string="Group By">
					<filter string="Country" name="grp_country_id" context="{'group_by': 'country_id'}" />
				</group>
			</search>
		</field>
	</record>

	<record id="res_partner_ethnicity_action" model="ir.actions.act_window">
		<field name="name">Ethnicities</field>
		<field name="res_model">res.partner.ethnicity</field>
		<field name="view_mode">tree,form</field>
	</record>
</odoo>
