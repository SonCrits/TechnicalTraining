<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="education_relationship_view_tree" model="ir.ui.view">
		<field name="name">education.relationship.tree</field>
		<field name="model">education.relationship</field>
		<field name="arch" type="xml">
			<tree string="Relationship Tree">
				<field name="name" />
				<field name="relation_type" />
			</tree>
		</field>
	</record>

	<record id="education_relationship_view_form" model="ir.ui.view">
		<field name="name">education.relationship.form</field>
		<field name="model">education.relationship</field>
		<field name="arch" type="xml">
			<form string="Student Form">
				<sheet>
					<widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}" />
					<field name="active" invisible="1" />
					<group>
						<group>
							<field name="name" />
						</group>
						<group>
							<field name="relation_type" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="education_relationship_view_search" model="ir.ui.view">
		<field name="name">education.relationship.search</field>
		<field name="model">education.relationship</field>
		<field name="arch" type="xml">
			<search string="Relationship Search">
				<field name="name" />
				<filter string="Archived" name="ftr_inactive" domain="[('active', '=', False)]" />
				<group expand="0" string="Group By">
					<filter string="Relation Type" name="grp_relation_type" context="{'group_by': 'relation_type'}" />
				</group>
			</search>
		</field>
	</record>

	<record id="education_relationship_action" model="ir.actions.act_window">
		<field name="name">Relationship</field>
		<field name="res_model">education.relationship</field>
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem id="education_relationship_menu" action="education_relationship_action" parent="education_configuration_menu_root" sequence="60" />
</odoo>
