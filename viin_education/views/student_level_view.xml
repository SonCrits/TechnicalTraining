<odoo>

	<record id="student_level_form_view" model="ir.ui.view">
		<field name="name">student.level.form.view</field>
		<field name="model">student.level</field>
		<field name="arch" type="xml">
			<form string="Student Level Form">
				<sheet>
					<group>
						<group>
							<field name='name'/>
							<field name='sequence'/>
						</group>
						<group>
							<field name='code'/>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>
	
	<record id="student_level_tree_view" model="ir.ui.view">
		<field name="name">student.level.tree.view</field>
		<field name="model">student.level</field>
		<field name="arch" type="xml">
			<tree string="Student Level Tree">
				<field name="name"/>
				<field name="code"/>
				<field name="sequence"/>
			</tree>
		</field>
	</record>
	
	<record id="student_level_search_view" model="ir.ui.view">
		<field name="name">student.level.search.view</field>
		<field name="model">student.level</field>
		<field name='arch' type='xml'>
			<search string="Student level Search">
				<field name='name' filter_domain="[('name','ilike',self)]"/>
				<field name='code'/>
			</search>
		</field>
	</record>
	
	<record id="student_level_action" model="ir.actions.act_window">
		<field name="name">Student Level</field>
		<field name="res_model">student.level</field>
		<field name="view_mode">tree,form</field>
	</record>
	
	<menuitem id="student_level_menu" name="Level" parent="education_student_menu_tab" action="student_level_action" sequence="70"/>
</odoo>
