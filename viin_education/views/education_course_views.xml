<odoo>
	
	<record id='education_course_action' model='ir.actions.act_window'>
		<field name='name'>Course</field>
		<field name='res_model'>education.course</field>
		<field name='view_mode'>form,tree</field>
	</record>
	
	<menuitem id='education_course_menu' name='Course' action="education_course_action" parent="education_configuration_menu_root" sequence="70"/>
	
	<record id='education_course_form_view' model='ir.ui.view'>
		<field name='name'>education.course.form.view</field>
		<field name='model'>education.course</field>
		<field name='arch' type='xml'>
			<form string='Course Form View'>
				<sheet>
					<group>
						<field name='name'/>						
						<field name='image'/>
					</group>
					<notebook>
						<page name='description' string='Description'>
							<group>
								<field name='description'/>
							</group>
						</page>
					</notebook>
				</sheet>
				<div class="oe_chatter">
					<field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
					<field name="activity_ids" widget="mail_activity" />
					<field name="message_ids" widget="mail_thread" />
				</div>
			</form>
		</field>
	</record>
</odoo>
