<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="education_school_view_tree" model="ir.ui.view">
		<field name="name">education.school.tree</field>
		<field name="model">education.school</field>
		<field name="arch" type="xml">
			<tree string="School Tree">
				<field name="name" />
				<field name="code" />
				<field name="company_id" groups="base.group_multi_company" />
			</tree>
		</field>
	</record>

	<record id="education_school_view_form" model="ir.ui.view">
		<field name="name">education.school.form</field>
		<field name="model">education.school</field>
		<field name="arch" type="xml">
			<form string="School Form">
				<sheet>
					<widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}" />
					<field name="active" invisible="1" />
					<group>
						<group>
							<field name="name" />
						</group>
						<group>
							<field name="code" />
							<field name="company_id" groups="base.group_multi_company"/>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="education_school_view_search" model="ir.ui.view">
		<field name="name">education.school.search</field>
		<field name="model">education.school</field>
		<field name="arch" type="xml">
			<search string="School Search">
				<field name="name" />
				<field name="code" />
				<filter string="Archived" name="ftr_inactive" domain="[('active', '=', False)]" />
				<group expand="0" string="Group By">
					<filter string="Company" name="grp_company" domain="[]" context="{'group_by' : 'company_id'}" groups="base.group_multi_company" />
				</group>
			</search>
		</field>
	</record>

	<record id="education_school_action" model="ir.actions.act_window">
		<field name="name">Schools</field>
		<field name="res_model">education.school</field>
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem id="education_school_menu" action="education_school_action" parent="education_configuration_menu_root" sequence="5" />
</odoo>
