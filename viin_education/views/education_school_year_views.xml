<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="education_school_year_view_tree" model="ir.ui.view">
		<field name="name">education.school.year.tree</field>
		<field name="model">education.school.year</field>
		<field name="arch" type="xml">
			<tree string="School Year Tree">
				<field name="name" />
				<field name="start_date" />
				<field name="end_date" />
			</tree>
		</field>
	</record>

	<record id="education_school_year_view_form" model="ir.ui.view">
		<field name="name">education.school.year.form</field>
		<field name="model">education.school.year</field>
		<field name="arch" type="xml">
			<form string="Student Form">
				<sheet>
					<widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}" />
					<field name="active" invisible="1" />
					<group>
						<group>
							<field name="start_date" />
                            <field name="end_date" />
						</group>
						<group>
                            <field name="name" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="education_school_year_view_search" model="ir.ui.view">
		<field name="name">education.school.year.search</field>
		<field name="model">education.school.year</field>
		<field name="arch" type="xml">
			<search string="School Year Search">
				<field name="name" />
				<field name="start_date" />
				<field name="end_date" />
				<filter string="Archived" name="ftr_inactive" domain="[('active', '=', False)]" />
			</search>
		</field>
	</record>

	<record id="education_school_year_action" model="ir.actions.act_window">
		<field name="name">School Year</field>
		<field name="res_model">education.school.year</field>
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem id="education_school_year_menu" action="education_school_year_action" parent="education_configuration_menu_root" sequence="40" />
</odoo>
