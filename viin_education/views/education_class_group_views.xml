<odoo>
	<record id="education_class_group_view_tree" model="ir.ui.view">
		<field name="name">education.class.group.tree</field>
		<field name="model">education.class.group</field>
		<field name="arch" type="xml">
			<tree string="Class Group Tree">
				<field name="sequence" widget="handle" />
				<field name="name" />
				<field name="company_id" groups="base.group_multi_company" />
			</tree>
		</field>
	</record>

	<record id="education_class_group_view_form" model="ir.ui.view">
		<field name="name">education.class.group.form</field>
		<field name="model">education.class.group</field>
		<field name="arch" type="xml">
			<form string="Class Group Form">
				<sheet>
					<widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}" />
					<field name="active" invisible="1" />
					<group>
						<group>
							<field name="name" />
						</group>
						<group>
							<field name="company_id" groups="base.group_multi_company" />
						</group>
					</group>
					<notebook>
						<page string="Class of Groups">
							<field name="class_ids">
								<tree editable='bottom'>
									<field name="name" />
									<field name="next_class_id" />
								</tree>
								<form>
									<group>
										<group>
											<field name="name" />
										</group>
										<group>
											<field name="next_class_id" />
										</group>
									</group>
								</form>
							</field>
						</page>
						<group name="description" string="Description">
							<field name="description" />
						</group>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>

	<record id="education_class_group_view_search" model="ir.ui.view">
		<field name="name">education.class.group.search</field>
		<field name="model">education.class.group</field>
		<field name="arch" type="xml">
			<search string="Class Group Search">
				<field name="name" />
				<filter string="Archived" name="ftr_inactive" domain="[('active', '=', False)]" />
				<group expand="0" string="Group By">
					<filter string="Company" name="grp_company" context="{'group_by' : 'company_id'}" groups="base.group_multi_company" />
				</group>
			</search>
		</field>
	</record>

	<record id="education_class_group_action" model="ir.actions.act_window">
		<field name="name">Class Groups</field>
		<field name="res_model">education.class.group</field>
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem id="education_class_group_menu" action="education_class_group_action" parent="education_configuration_menu_root" sequence="20" />
</odoo>
