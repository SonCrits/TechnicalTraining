<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="module_education_category" model="ir.module.category">
			<field name="name">Education</field>
			<field name="sequence">10</field>
		</record>

		<record id="module_education_category_user" model="ir.module.category">
			<field name="name">Education</field>
			<field name="parent_id" ref="module_education_category" />
			<field name="description">Helps you handle education application</field>
			<field name="sequence">10</field>
		</record>

		<record id="viin_education_group_user" model="res.groups">
			<field name="name">User</field>
			<field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
			<field name="category_id" ref="module_education_category_user" />
			<field name="comment">Users belong to this group can use this application</field>
		</record>

		<record id="viin_education_group_admin" model="res.groups">
			<field name="name">Administrator</field>
			<field name="implied_ids" eval="[(4, ref('viin_education_group_user'))]" />
			<field name="category_id" ref="module_education_category_user" />
			<field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]" />
			<field name="comment">Users belong to this group can control this application</field>
		</record>
	</data>
	
	<data noupdate="1">
		<record id="education_school_rule_multi_company" model="ir.rule">
			<field name="name">School multi-company</field>
			<field ref="model_education_school" name="model_id" />
			<field eval="True" name="global" />
			<field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
		</record>
		
		<record id="education_class_rule_multi_company" model="ir.rule">
			<field name="name">Class multi-company</field>
			<field ref="model_education_class" name="model_id" />
			<field eval="True" name="global" />
			<field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
		</record>

		<record id="education_class_group_rule_multi_company" model="ir.rule">
			<field name="name">Group multi-company</field>
			<field ref="model_education_class_group" name="model_id" />
			<field eval="True" name="global" />
			<field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
		</record>

		<record id="education_school_year_rule_multi_company" model="ir.rule">
			<field name="name">School year multi-company</field>
			<field ref="model_education_school_year" name="model_id" />
			<field eval="True" name="global" />
			<field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
		</record>
	</data>
</odoo>
