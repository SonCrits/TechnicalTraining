<odoo>
	
	<record id='education_student_tuition_fee_view_wizard_form' model='ir.ui.view'>
		<field name='name'>education.student.tuition.fee.wizard.view.form</field>
		<field name='model'>education.student.tuition.fee.wizard</field>
		<field name='arch' type='xml'>
			<form string='Tuition Fee Form'>
				<sheet>
					<group>
						<field name='student_id' invisible='0'/>
						<field name='math_point'/>
						<field name='physical_point'/>
						<field name='chemistry_point' />
					</group>
					<footer>
						<button name='action_confirm' type='object' string='Confirm'/>
						<button special='cancel' string='Cancel'/>
					</footer>
				</sheet>
			</form>
		</field>
	</record>
</odoo>
